<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= resort.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/resorts/<%= resort._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="resort[name]" value="<%= resort.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="resort[image]" value="<%= resort.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="resort[price]" value="<%= resort.price %>" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="resort[description]" value="<%= resort.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/resorts">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>

