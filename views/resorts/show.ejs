<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail">
                <img class="image-responive" src="<%=resort.image%>" alt="image">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= resort.price %>/night</h4>
                    <h4><a href=""><%= resort.name%></a></h4>
                    <p><%= resort.description %></p>
                    <p>
                        <em>Submitted By <%= resort.author.username %></em>
                    </p>
                    <a class="btn btn-warning" href="/resorts/<%= resort._id %>/edit">Edit</a>
                    <form id="delete-form" action="/resorts/<%= resort._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/resorts/<%= resort.id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% resort.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <a class="btn btn-xs btn-warning"
                            href="/resorts/<%=resort._id%>/comments/<%=comment._id%>/edit">
                            Edit
                        </a>

                        <form id="delete-form"
                            action="/resorts/<%=resort._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                        </form>

                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>