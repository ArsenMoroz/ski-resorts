<%- include ("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>SkiResort</h1>
            <p>View our hand-picked resorts from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/resorts/new">Add New Resort</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Ski Resorts</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% data.forEach(function(resort){ %>
            <a href="/resorts/<%= resort._id%>">
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= resort.image %>" alt="image">
                        <div class="caption">
                            <h4><%= resort.name%></h4>
                        </div>
                        <p>
                            <a href="/resorts/<%= resort._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>

</div>

<%- include ("../partials/footer") %>

