<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To SkiResort!</h1>
             <p>View our hand-picked resorts from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/resorts/new">Add New Resort</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% resorts.forEach(function(resort){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= resort.image %>">
                   <div class="caption">
                       <h4><%= resort.name %></h4>
                   </div>
                   <p>
                       <a href="/resorts/<%= resort._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
